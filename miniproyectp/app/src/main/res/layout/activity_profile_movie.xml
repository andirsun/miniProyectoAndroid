<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".Controladores.ProfileMovieActivity"
                                             android:background="@color/colorPrimary">

    <ImageView
            android:layout_width="185dp"
            android:layout_height="250dp"
            app:srcCompat="@drawable/ic_person_black_24dp"
            android:id="@+id/image_mov"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/reservar" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="171dp"
            android:layout_height="88dp"
            android:id="@+id/nombre_pelicula"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/Año_pelicula"
            app:layout_constraintStart_toEndOf="@+id/image_mov" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintVertical_bias="0.666" android:textColor="@color/colorText"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:textAlignment="center"/>
    <TextView
            android:text="TextView"
            android:layout_width="112dp"
            android:layout_height="41dp"
            android:id="@+id/Año_pelicula" app:layout_constraintStart_toEndOf="@+id/image_mov"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="48dp" app:layout_constraintBottom_toTopOf="@+id/director_pelicula"
            android:textColor="@color/colorText"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintHorizontal_bias="0.648" android:textAlignment="center"/>
    <TextView
            android:text="TextView"
            android:layout_width="91dp"
            android:layout_height="30dp"
            android:id="@+id/director_pelicula" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/image_mov" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.505" android:textColor="@color/colorText"
            app:layout_constraintBottom_toTopOf="@+id/resumen_pelicula" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.592" android:textAlignment="center"/>
    <Button
            android:text="Reservala Aqui"
            android:layout_width="160dp"
            android:layout_height="61dp"
            android:id="@+id/reservar"
            android:background="@color/design_default_color_primary" android:backgroundTint="#F44336"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/director_pelicula" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.257"
            android:layout_marginBottom="344dp" app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="reservarButtonClicked"/>
    <TextView
            android:text="TextView"
            android:layout_width="343dp"
            android:layout_height="142dp"
            android:id="@+id/resumen_pelicula" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="112dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/colorText" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textAlignment="center"/>
    <TextView
            android:text="TextView"
            android:layout_width="257dp"
            android:layout_height="55dp"
            android:id="@+id/Nada" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/reservar" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/resumen_pelicula" app:layout_constraintVertical_bias="0.315"
            tools:text="Sinopsis" android:textColor="#FFFFFF" android:textSize="36sp" android:textAlignment="center"/>
</android.support.constraint.ConstraintLayout>