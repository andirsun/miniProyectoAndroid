<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:orientation="vertical"
                android:background="@color/colorBackGround"
                 >


    <ImageView
            android:layout_width="145dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/movieImage"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nombre_movie"
            android:textColor="@color/colorText"
            android:textSize="20dp"
            android:layout_toEndOf="@+id/movieImage"
            android:layout_toRightOf="@+id/movieImage"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/genero"
            android:textSize="14dp"
            android:textColor="@color/colorText"
            android:layout_toEndOf="@+id/movieImage"
            android:layout_toRightOf="@+id/movieImage"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:focusable="false"
            android:focusableInTouchMode="false" android:layout_below="@+id/nombre_movie"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/duracion"
            android:textSize="14dp"
            android:textColor="@color/colorText"
            android:layout_toEndOf="@+id/movieImage"
            android:layout_toRightOf="@+id/movieImage"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:focusable="false"
            android:focusableInTouchMode="false" android:layout_below="@+id/genero"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/puntuacion"
            android:textSize="14dp"
            android:textColor="@color/colorText"
            android:layout_toRightOf="@+id/movieImage"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="204dp"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
</RelativeLayout>