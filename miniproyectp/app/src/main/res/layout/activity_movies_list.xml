<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".Controladores.MoviesListActivity"
                                             android:background="@color/colorBackGround">

    <Button
            android:text="registrar Pelicula"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            android:id="@+id/añadirPelicula"
            android:textColor="@color/colorText"
            android:textColorHint="@android:color/holo_red_light"
            android:background="@android:color/holo_red_light"
            android:ems="10"
            app:layout_constraintHorizontal_bias="0.991" android:onClick="registrarMovie"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/listMovies"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.444"/>
    <Button
            android:text="Reservas"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            android:id="@+id/añadirPelicula2"
            android:textColor="@color/colorText"
            android:textColorHint="@android:color/holo_red_light"
            android:background="@android:color/holo_red_light"
            android:ems="10"
            app:layout_constraintHorizontal_bias="0.205" android:onClick="loadUsuarios"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/listMovies"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.444"/>
    <ListView
            android:layout_width="409dp"
            android:layout_height="623dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/listMovies"
            android:clickable="true" app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
    />
</android.support.constraint.ConstraintLayout>